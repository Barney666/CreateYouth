    height: calc(100vw * 279 / 520);
}
.swiperItem{
    width: 100%;
    margin-top: 4rpx;
}


.bottom{
    display: flex;
    flex-direction: row;
    height: 780rpx;    /* TODO 要改！*/
    margin-top: 4rpx;
}
.left{
    display: flex;
    flex-direction: column;
    flex:1.5;
    background-color: rgba(255, 255, 255, 1);
    background: #FFFFFF;
    border: 2rpx solid #979797;
    border-radius: 20px;
    margin-left: 4rpx;
    margin-top: 2rpx;
}
.welfare{
    /*height: 380rpx;*/
