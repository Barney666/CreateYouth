    font-size: 42rpx;
    color: #000000;
    margin-left: 20rpx;
    margin-top: 6rpx;
}
.welfare image{
    width: 13%;
    margin-left: 10rpx;
    /*margin-top: 5rpx;*/
}

.split{
    opacity: 0.53;
    border: 1rpx solid #979797;
}

.new{
